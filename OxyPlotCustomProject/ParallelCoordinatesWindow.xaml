<Window
    x:Class="OxyPlotCustomProject.ParallelCoordinatesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OxyPlotCustomProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    Title="Parallel Coordinates Plot"
    Width="1000"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- タイトル部分 -->
        <TextBlock
            Grid.Row="0"
            Margin="20,10"
            HorizontalAlignment="Center"
            FontSize="16"
            FontWeight="Bold"
            Text="Parallel Coordinates Plot - Iris Dataset Sample" />
        
        <!-- コントロール部分 -->
        <Grid Grid.Row="1" Margin="10,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <!-- 操作説明とリセットボタン -->
            <StackPanel 
                Grid.Row="0"
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                
                <TextBlock
                    Text="Instructions: Hover to highlight, click to select/deselect lines"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Foreground="Gray"
                    Margin="0,0,20,0" />
                    
                <Button
                    x:Name="resetButton"
                    Content="Reset Selection"
                    Padding="15,8"
                    Background="LightCoral"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="DarkRed"
                    BorderThickness="1"
                    Command="{Binding ResetCommand}"
                    Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="IndianRed" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            
            <!-- ツールチップカスタマイズ用ボタン -->
            <StackPanel 
                Grid.Row="1"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,10,0,0">
                
                <TextBlock
                    Text="Tooltip Customization:"
                    VerticalAlignment="Center"
                    FontSize="12"
                    FontWeight="Bold"
                    Margin="0,0,15,0" />
                
                <Button
                    Content="Default Tooltip"
                    Padding="10,6"
                    Background="LightBlue"
                    Foreground="DarkBlue"
                    BorderBrush="DarkBlue"
                    BorderThickness="1"
                    Command="{Binding UseDefaultTooltipCommand}"
                    Margin="5,0"
                    Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="SkyBlue" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button
                    Content="Custom Tooltip (Japanese)"
                    Padding="10,6"
                    Background="LightGreen"
                    Foreground="DarkGreen"
                    BorderBrush="DarkGreen"
                    BorderThickness="1"
                    Command="{Binding UseCustomTooltipCommand}"
                    Margin="5,0"
                    Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="MediumSpringGreen" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button
                    Content="Change Style (Dark)"
                    Padding="10,6"
                    Background="Gold"
                    Foreground="DarkOrange"
                    BorderBrush="DarkOrange"
                    BorderThickness="1"
                    Command="{Binding ChangeTooltipStyleCommand}"
                    Margin="5,0"
                    Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Orange" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- PlotView -->
        <oxy:PlotView
            x:Name="plotView"
            Grid.Row="2"
            Margin="10"
            Model="{Binding PlotModel}">
            <i:Interaction.Behaviors>
                <local:PlotViewMouseBehavior 
                    MouseMoveCommand="{Binding MouseMoveCommand}"
                    MouseDownCommand="{Binding MouseDownCommand}" />
            </i:Interaction.Behaviors>
        </oxy:PlotView>
    </Grid>
</Window>