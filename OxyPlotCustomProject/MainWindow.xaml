<Window
    x:Class="OxyPlotCustomProject.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OxyPlotCustomProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!--  Buttons to open different plot windows  -->
        <StackPanel
            Grid.Row="0"
            Margin="10"
            Orientation="Horizontal"
            HorizontalAlignment="Center">
            <Button
                Margin="5"
                Padding="10,5"
                Click="OpenParallelCoordinatesPlot_Click"
                Content="Open Parallel Coordinates Plot"
                FontSize="14" />
            <Button
                Margin="5"
                Padding="10,5"
                Click="OpenClickableScatterPlot_Click"
                Content="Open Clickable Scatter Plot"
                FontSize="14" />
        </StackPanel>
        
        <!--  PlotView bound to the ViewModel's PlotModel  -->
        <oxy:PlotView Grid.Row="1" Model="{Binding PlotModel}" />
    </Grid>
</Window>
