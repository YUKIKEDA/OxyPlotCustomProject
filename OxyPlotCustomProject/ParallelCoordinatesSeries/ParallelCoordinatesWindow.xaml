<Window
    x:Class="OxyPlotCustomProject.ParallelCoordinatesWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:OxyPlotCustomProject.ParallelCoordinatesSeries"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:OxyPlotCustomProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    Title="Parallel Coordinates Plot"
    Width="1000"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  タイトル部分  -->
        <TextBlock
            Grid.Row="0"
            Margin="20,10"
            HorizontalAlignment="Center"
            FontSize="16"
            FontWeight="Bold"
            Text="Parallel Coordinates Plot - Iris Dataset Sample" />

        <!--  コントロール部分  -->
        <Grid Grid.Row="1" Margin="10,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  操作説明とリセットボタン  -->
            <StackPanel
                Grid.Row="0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <TextBlock
                    Margin="0,0,20,0"
                    VerticalAlignment="Center"
                    FontSize="11"
                    Foreground="Gray"
                    Text="Instructions: Hover to highlight, click to select/deselect lines" />

                <Button
                    x:Name="resetButton"
                    Padding="15,8"
                    Background="LightCoral"
                    BorderBrush="DarkRed"
                    BorderThickness="1"
                    Command="{Binding ResetCommand}"
                    Content="Reset Selection"
                    Cursor="Hand"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="IndianRed" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!--  ツールチップカスタマイズ用ボタン  -->
            <StackPanel
                Grid.Row="1"
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">

                <TextBlock
                    Margin="0,0,15,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="Tooltip Customization:" />

                <Button
                    Margin="5,0"
                    Padding="10,6"
                    Background="LightBlue"
                    BorderBrush="DarkBlue"
                    BorderThickness="1"
                    Command="{Binding UseDefaultTooltipCommand}"
                    Content="Default Tooltip"
                    Cursor="Hand"
                    Foreground="DarkBlue">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="SkyBlue" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button
                    Margin="5,0"
                    Padding="10,6"
                    Background="LightGreen"
                    BorderBrush="DarkGreen"
                    BorderThickness="1"
                    Command="{Binding UseCustomTooltipCommand}"
                    Content="Custom Tooltip (Japanese)"
                    Cursor="Hand"
                    Foreground="DarkGreen">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="MediumSpringGreen" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button
                    Margin="5,0"
                    Padding="10,6"
                    Background="Gold"
                    BorderBrush="DarkOrange"
                    BorderThickness="1"
                    Command="{Binding ChangeTooltipStyleCommand}"
                    Content="Change Style (Dark)"
                    Cursor="Hand"
                    Foreground="DarkOrange">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Orange" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>

        <!--  PlotView  -->
        <oxy:PlotView
            x:Name="plotView"
            Grid.Row="2"
            Margin="10"
            Model="{Binding PlotModel}">
            <i:Interaction.Behaviors>
                <behavior:PlotViewMouseBehavior MouseDownCommand="{Binding MouseDownCommand}" MouseMoveCommand="{Binding MouseMoveCommand}" />
            </i:Interaction.Behaviors>
        </oxy:PlotView>
    </Grid>
</Window>