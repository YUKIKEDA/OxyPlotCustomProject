<Window
    x:Class="OxyPlotCustomProject.ClickableScatterWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="clr-namespace:OxyPlotCustomProject.ClickableScatterSeries"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:OxyPlotCustomProject"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="http://oxyplot.org/wpf"
    Title="クリック可能な散布図"
    Width="1000"
    Height="700"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  タイトル  -->
        <TextBlock
            Grid.Row="0"
            Margin="10,10,10,5"
            HorizontalAlignment="Center"
            FontSize="18"
            FontWeight="Bold"
            Text="クリック可能な散布図デモ" />

        <!--  説明  -->
        <TextBlock
            Grid.Row="1"
            Margin="10,5,10,10"
            HorizontalAlignment="Center"
            FontSize="12"
            Foreground="Gray"
            Text="グラフ内の任意の場所をクリックして新しい点を追加できます" />

        <!--  コントロールボタン  -->
        <StackPanel
            Grid.Row="2"
            Margin="10,5"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Margin="5"
                Padding="10,5"
                Command="{Binding ClearAddedPointsCommand}"
                Content="追加した点をクリア"
                FontSize="12" />
            <Button
                Margin="5"
                Padding="10,5"
                Command="{Binding RemoveLastAddedPointCommand}"
                Content="最後に追加した点を削除"
                FontSize="12" />
        </StackPanel>

        <!--  PlotView with Clickable Scatter Mouse Behavior  -->
        <oxy:PlotView Grid.Row="3" Model="{Binding PlotModel}">
            <i:Interaction.Behaviors>
                <behavior:ClickableScatterMouseBehavior EnableClickableSeries="True" />
            </i:Interaction.Behaviors>
        </oxy:PlotView>

        <!--  ステータス表示  -->
        <Border
            Grid.Row="4"
            Margin="10,5,10,10"
            Padding="10,5"
            Background="LightGray"
            CornerRadius="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    FontSize="12"
                    Text="{Binding StatusMessage}"
                    TextWrapping="Wrap" />
                <TextBlock
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    FontSize="12"
                    FontWeight="Bold"
                    Text="{Binding PointCountText}" />
            </Grid>
        </Border>
    </Grid>
</Window>
